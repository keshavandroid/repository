<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="TSPoppinsMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TSSHPoppinsMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TSPoppinsRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TSPoppinsSemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="CalenderHeader">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <!--        <item name="android:textColorPrimary">@color/colorPrimary</item>-->
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="colorAccent">@color/colorPrimary</item>


    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">

        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="CalenderViewDateCustomText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/text_color_heading</item>

    </style>

    <style name="CalenderViewWeekCustomText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/edittextbackgroundsimple</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:drawableStart">@drawable/icon_sector_un</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:fillViewport">true</item>

    </style>

    <style name="spinnerDropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_heading</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>


    <style name="SwitchThemeOverlay">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#009D15</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#A8A8A8</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#DBDBDB</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_1sdp</item>
    </style>

    <style name="AlertStyleButtons" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/alerter_text_medium</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/alerter_alert_padding</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AlertStyleButtons2" parent="@android:style/Widget">
        <!--        <item name="android:layout_width">match_parent</item>-->
        <!--        <item name="android:layout_height">@dimen/_20sdp</item>-->
        <!--        <item name="android:clickable">true</item>-->
<!--        <item name="android:background">@android:color/transparent</item>-->
<!--        <item name="android:backgroundTint">@color/colorWhite</item>-->
        <item name="android:textSize">@dimen/alerter_text_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>
