<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_margin="@dimen/_7sdp"
        android:background="@color/colorWhite"
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_donation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_below="@+id/info_button"
                android:src="@drawable/charity"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_info_home_screen"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_heading_category"
                style="@style/TSPoppinsRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_donation"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Plant a Tree"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>