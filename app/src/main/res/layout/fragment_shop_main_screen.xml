                        android:background="@drawable/bg_store_lines"/>

                    <Button
                        android:layout_below="@+id/img2"
                        android:id="@+id/btn_learn_more"
                        style="@style/TSPoppinsRegular"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/shape_button_green_outline"
                        android:gravity="center"
                        android:text="Learn More"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/green_color_button"
                        android:textSize="@dimen/_12sdp" />
                    -->
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TSPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="Your Environmental Impact in Numbers!"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TSPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Your recycling contribution helped"
                            android:textColor="#BBBBBB"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvHomeCategories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_row_store_contribution" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textOrganization"
                    style="@style/TSPoppinsRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
           android:layout_alignParentBottom="true"
            android:id="@+id/llbuttons"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/main_bg_color"
            android:gravity="center">

            <Button
                android:id="@+id/btn_recycle"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/button_shape_green"
                android:gravity="center"
                android:text="Schedule Pickup"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_start_dropoff"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/shape_button_green_outline"
                android:gravity="center"
                android:text="Start Drop-off"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="@color/green_color_button"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_accpt"
            style="@style/TSPoppinsRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:text="@string/str_accepted_material"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>

</FrameLayout>