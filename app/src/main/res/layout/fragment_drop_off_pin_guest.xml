<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/container_drop_off_pin"
    android:background="@drawable/shape_layout_curve_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <HorizontalScrollView
            android:id="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step1"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_select_station"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step1"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="@string/select_stations"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step2"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_material"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step2"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="@string/select_material"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step3"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_verify"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step3"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/verify_drop_off"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step4"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_confirm_selections"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step4"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/confirm_selection"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step5"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_succeeded"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step5"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/request_succeeded"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/container_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llBottom"
            android:layout_below="@+id/stepView"
            tools:ignore="NestedWeights">

        </FrameLayout>

        <LinearLayout
            android:layout_below="@+id/stepView"
            android:layout_above="@+id/llMiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMiddle"
            android:layout_above="@+id/llBottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llSelectType"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@color/drop_off_green"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtFavourite"
                        style="@style/TSPoppinsRegular"
                        android:layout_weight="1"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/str_favorites"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/drop_off_green"
                        android:drawableRight="@drawable/ic_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/txtFilter"
                        style="@style/TSPoppinsRegular"
                        android:layout_weight="1"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="@string/str_filter"
                        android:background="@color/drop_off_green"
                        android:textSize="@dimen/_12sdp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="@color/drop_off_green"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">
                </View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFilter"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDownArrow"
                    style="@style/TSPoppinsRegular"
                    android:textSize="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawableTint="@color/drop_off_green"
                    android:drawableRight="@drawable/ic_close_green"
                    android:textColor="@color/text_color_drop_off"
                    android:text="Filter Drop-off Station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtCity"
                    android:text="City"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_12sdp"
                    android:drawableRight="@drawable/ic_location_pin_white"
                    style="@style/TSPoppinsRegular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_green_radius_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtSelectedCities"
                    style="@style/TSPoppinsRegular"
                    android:visibility="gone"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/text_color_drop_off"
                    android:textSize="@dimen/_12sdp"
                    android:drawableRight="@drawable/ic_close_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtMaterial"
                    android:text="Material"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_12sdp"
                    android:drawableRight="@drawable/ic_material"
                    style="@style/TSPoppinsRegular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/green_color_button"
                    android:background="@drawable/bg_green_border_1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <!--<TextView
                    android:id="@+id/txtSelectedMaterials"
                    style="@style/TSPoppinsRegular"
                    android:visibility="gone"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/text_color_drop_off"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>-->


                <!--<GridView
                        android:id="@+id/grdSelectedMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:stretchMode="columnWidth"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:horizontalSpacing="6dp"
                        android:numColumns="auto_fit"
                        android:verticalSpacing="6dp" />-->


                <com.android.reloop.CustomGridView.TwoWayGridView
                    android:id="@+id/grdSelectedMaterial"
                    app:columnWidth="@dimen/_150sdp"
                    app:rowHeight="80dp"
                    app:numColumns="auto_fit"
                    app:numRows="1"
                    android:visibility="gone"
                    app:scrollDirectionPortrait="horizontal"
                    app:scrollDirectionLandscape="horizontal"
                    app:verticalSpacing="16dp"
                    app:horizontalSpacing="16dp"
                    app:gravity="center"
                    app:stretchMode="spacingWidthUniform"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                </com.android.reloop.CustomGridView.TwoWayGridView>




                <TextView
                    android:id="@+id/txtClearFilter"
                    android:text="@string/str_clear_filters"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_1sdp"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone"
                    style="@style/TSPoppinsRegular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/green_color_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center">

            <Button
                android:id="@+id/back"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/button_shape_hollow"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnSelectStation"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/button_shape"
                android:text="@string/select_pin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnMainFilterApply"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/button_shape"
                android:text="@string/apply_filter_str"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>