<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardBackgroundColor="@color/color_background2"
    app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">
            
            
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImg"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/cardImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/TSPoppinsMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc"
                    style="@style/TSPoppinsMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_10sdp" />


                <LinearLayout
                    android:id="@+id/llmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"

                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lljoindate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TSPoppinsRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joined Date"
                            android:textColor="@color/light_green"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvjoindate"
                            style="@style/TSPoppinsRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="visible" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <LinearLayout
                            android:id="@+id/llexitDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                style="@style/TSPoppinsRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exit Date:"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvexitdate"
                                style="@style/TSPoppinsRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2022-12-22"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="visible" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/exit"
                            style="@style/TSPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/shape_button_green_outline_transprent"
                            android:gravity="center"
                            android:text="@string/exit"
                            android:textAlignment="center"
                            android:textColor="@color/green_color_button"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

</androidx.cardview.widget.CardView>