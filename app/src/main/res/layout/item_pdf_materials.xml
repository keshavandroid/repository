<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_1sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMaterial"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/certificate_icons_plastics">
        </ImageView>

        <TextView
            android:id="@+id/materialValue"
            style="@style/TSPoppinsRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0 Kgs"
            android:singleLine="true"
            android:textColor="@color/green_color_button"
            android:textSize="@dimen/_7sdp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/materialName"
            style="@style/TSPoppinsRegular"
            android:gravity="center"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/quantum_grey600"
            android:textSize="@dimen/_7sdp" />

    </LinearLayout>

</RelativeLayout>