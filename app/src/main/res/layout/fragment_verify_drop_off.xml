<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/container_verify_drop_off"
    android:background="@drawable/shape_layout_curve_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step1"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_select_station"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step1"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="@string/select_stations"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step2"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_material"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step2"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="@string/select_material"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step3"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_verify"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step3"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/verify_drop_off"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step4"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_confirm_selections"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step4"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/confirm_selection"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_step5"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/ic_step_succeeded"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_step5"
                        style="@style/TSPoppinsMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:src="@drawable/icon_select_categories_en"
                        android:text="@string/request_succeeded"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_above="@+id/llBottom"
            android:layout_below="@+id/stepView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <!--Location-->
                <RelativeLayout
                    android:id="@+id/rlLocationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtVerifyLoc"
                        style="@style/TSPoppinsRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:drawableLeft="@drawable/ic_location_pin_white"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/quantum_grey"
                        android:gravity="start"
                        android:text="@string/str_verify_location"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_drop_off"
                        android:textSize="@dimen/_13sdp" />

                    <RelativeLayout
                        android:layout_below="@+id/txtVerifyLoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btnVerify"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/button_shape"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:text="Verify"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white">

                        </TextView>

                        <TextView
                            android:id="@+id/locationAdd"
                            style="@style/TSPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_toRightOf="@+id/btnVerify"
                            android:background="@drawable/edittextbackgroundsimple_rect"
                            android:elevation="@dimen/_3sdp"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="Please click the verify button"
                            android:textColor="@color/text_color_drop_off"
                            android:textColorHint="@color/text_color_drop_off"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_12sdp"
                            app:focusedBackground="@drawable/edittextbackgroundselected_rect"
                            app:unFocusedBackground="@drawable/edittextbackgroundsimple"
                            tools:ignore="Autofill,LabelFor" />


                    </RelativeLayout>

                </RelativeLayout>

                <!--Photo-->
                <RelativeLayout
                    android:id="@+id/rlPhotoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTitlePhoto"
                        style="@style/TSPoppinsRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:drawableLeft="@drawable/ic_photo"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/quantum_grey"
                        android:gravity="start"
                        android:text="@string/str_take_photo_of_material"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_drop_off"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/txtImageSelection"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_below="@+id/txtTitlePhoto"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_rounded_dark_grey"
                        android:gravity="center"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_drop_off"
                        android:textSize="@dimen/_25sdp"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_capture_images"
                        android:layout_below="@+id/txtImageSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

                <!--Barcode-->
                <RelativeLayout
                    android:id="@+id/rlBarcodeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTitleBarcode"
                        style="@style/TSPoppinsRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:drawableLeft="@drawable/ic_barcode_sm"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/quantum_grey"
                        android:gravity="start"
                        android:text="@string/str_scan_barcode"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_drop_off"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/txtBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_below="@+id/txtTitleBarcode"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_rounded_dark_grey"
                        android:gravity="center"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_drop_off"
                        android:textSize="@dimen/_25sdp"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_barcode"
                        android:layout_below="@+id/txtBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>





            </LinearLayout>


        </ScrollView>



        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center">

            <Button
                android:id="@+id/back"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/button_shape_hollow"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnNext"
                style="@style/TSPoppinsRegular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/button_shape"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlbarcodep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_50sdp"
            android:visibility="gone">


            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeScannerDropOff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.journeyapps.barcodescanner.DecoratedBarcodeView>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/icon_cancel_cross_blue" />

            <!--<SurfaceView
                android:id="@+id/cameraSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"/>-->
        </RelativeLayout>

    </RelativeLayout>



</FrameLayout>